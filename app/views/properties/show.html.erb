<p id="notice"><%= notice %></p>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>建築年:</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考:</strong>
  <%= @property.note %>
</p>
<% @closest_stations.each.with_index(1) do |closest_station, i |%>
  <h3>最寄り駅<%= "#{i}" %> </h3>
  <p>
    <strong>路線名</strong>
    <%= closest_station.route_name %>
  </p>
  <p>
    <strong>駅名</strong>
    <%= closest_station.station_name %>
  </p>
  <p>
    <strong>徒歩分数</strong>
    <%= closest_station.walk_minutes %>
  </p>
<% end %>
